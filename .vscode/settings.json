{
    /* ============================================================================================================================ */
    /* ----------------------------------------------------- Projects Settings ---------------------------------------------------- */
    /* ============================================================================================================================ */
    
    // Exclude from search
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },

    // Exclude from watcher
    "files.watcherExclude": {
        "${workspaceRoot}/extern/mbed-os/**": true
    },

    // Disable word wrap
    "editor.wordWrap": "off",

    // Search settings
    "search.useIgnoreFiles": false,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Visual Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Icons
    "vsicons.associations.files": [
        {"icon": "rmd",      "extensions": ["ld"],          "format": "svg"},
        {"icon": "config",   "extensions": ["ioc"],         "format": "svg"},
        {"icon": "assembly", "extensions": ["s"],           "format": "svg"},
        {"icon": "config",   "extensions": ["svd"],         "format": "svg"},
        {"icon": "config",   "extensions": [".mbed"],       "format": "svg"},
        {"icon": "config",   "extensions": [".env"],       "format": "svg"},
        {"icon": "config",   "extensions": [".mbedignore"], "format": "svg"},
    ],
    "vsicons.associations.folders": [
        {"icon": "plugin", "extensions": ["extern", "dep"], "format": "svg"},
        {"icon": "asset",  "extensions": ["pcb"],           "format": "svg"},
    ],

/* ============================================================================================================================ */
    /* ------------------------------------------------------ Helper Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Terminal settings
    "terminal.integrated.automationShell.linux": null,
    "terminal.integrated.scrollback": 50000,

    // Header's generator
    "psi-header.config": {
        "forceToTop": true,
        "initials": "K.P.",
        "author": "Krzysztof Pierczyk",
        "blankLinesAfter": 1,
        "authorEmail": "krzysztof.pierczyk@gmail.com",
        "creationDateZero": "asIs"
    },
    "psi-header.changes-tracking": {
        "isActive": true,
        "modDate": "@modified",
        "modDateFormat": "dd-MM-yyyy hh:nn:ss",
        "enforceHeader": false,
        "autoHeader": "off",
        "updateLicenseVariables": true,
    },
    "psi-header.lang-config": [
        {
            "language": "cpp",
            "begin": "/** ==================================================================================================================================",
            "end": " * ================================================================================================================================ */",
            "prefix": " * ",
            "afterHeader": [
                "#ifndef ___H__",
                "#define ___H__",
                "",
                "/* =========================================================== Includes =========================================================== */",
                "",
                "",
                "",
                "/* ========================================================== Namespaces ========================================================== */",
                "",
                "namespace {",
                "",
                "/* ================================================================================================================================ */",
                "",
                "} // End namespace",
                "",
                "#endif",
            ]
        },
        {
            "language": "cmake",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
        },
        {
            "language": "shellscript",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
            "beforeHeader": [
                "#!/usr/bin/env bash"
            ]
        },
        {
            "language": "python",
            "mapTo": "cmake"
        },
        {
            "language": "bat",
            "begin": ": ====================================================================================================================================",
            "end": ": ====================================================================================================================================",
            "prefix": ": ",
        },
        {
            "language": "arm",
            "begin": "/** ==================================================================================================================================",
            "end": " * ================================================================================================================================ */",
            "prefix": " * "
        }
    ],
    "psi-header.variables": [
        ["projectname", "bash-utils"]
    ],
    "psi-header.templates": [
        {
            "language": "cpp",
            "template": [
                "@file       <<filename>>",
                "@author     <<author>> (<<authoremail>>)",
                "@maintainer <<author>> (<<authoremail>>)",
                "@date       <<filecreated('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@modified   <<dateformat('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@project    <<projectname>>",
                "@brief      ",
                "",
                "",
                "@copyright <<author>> Â© <<year>>"
            ]
        },
        {
            "language": "cmake",
            "mapTo": "cpp"
        },
        {
            "language": "python",
            "mapTo": "cpp"
        },
        {
            "language": "shellscript",
            "mapTo": "cpp"
        },
        {
            "language": "arm",
            "mapTo": "cpp"
        }
    ],

    // Comment divider
    "comment-divider" : {
        "length" : 134,
        "shouldLengthIncludeIndent" : true,
        // Main header
        "mainHeaderFiller" : "=",
        "mainHeaderHeight" : "block",
        "mainHeaderAlign" : "center",
        // Subheader
        "subheaderFiller" : "=",
        "subheaderHeight" : "line",
        "subheaderAlign" : "center",
        // Sold line
        "lineFiller" : "=",
    },

    // Comments anchors
    "commentAnchors.tags.list": [
        {
            "tag": "LINK",
            "enabled": false
        }
    ],

}